437:PINNODE [0..0] = [REFRESH_TIMER0..5];
438:PINNODE  0  = REFRESH_TIMER_RESET;
439:
440:
441:/* 
442:   5 bit counter for refresh time. In order to get a 15us cycle, this counter uses the following table:
443:
444:   CPU          CPU/16          Timer_Reset_Value for 15us
445:   16 MHz       1 MHz           15 = 15us
446:   20 MHz       1.25 Mhz        19 = 15.2us
447:   25 MHz       1.56 MHz        24 = 15.26us
448:   33 MHz       2.06 MHz        31 = 15 us
449:   40 MHz       2.5 MHz         38 = 15.2 us
450:
451:
452:   If the clock rate is not 32MHz for the core input, this will need to be adjusted.
453:
454:   The REFESH_TIMER_RESET flip flop is used to produce a 1 clock cycle long reset signal once the 
455:   counter reaches 128 (highest bit set).  The output of that flipflop resets the counter value to 
456:   0x08.
457:*/
458:
459:
460:/* Create a 5 bit timer */
461:REFRESH_TIMER0.d = !REFRESH_TIMER0;
462:REFRESH_TIMER1.d = REFRESH_TIMER0 $ REFRESH_TIMER1;
463:
464:REFRESH_TIMER2.d = ( REFRESH_TIMER2 & !(REFRESH_TIMER1 & REFRESH_TIMER0))
465:                 # ( !REFRESH_TIMER2 & (REFRESH_TIMER1 & REFRESH_TIMER0) );
466:
467:REFRESH_TIMER3.d = ( REFRESH_TIMER3 & !(REFRESH_TIMER2 & REFRESH_TIMER1 & REFRESH_TIMER0))
468:                 # ( !REFRESH_TIMER3 & (REFRESH_TIMER2 & REFRESH_TIMER1 & REFRESH_TIMER0) );
469:
470:REFRESH_TIMER4.d = ( REFRESH_TIMER4 & !(REFRESH_TIMER3 & REFRESH_TIMER2 & REFRESH_TIMER1 & REFRESH_TIMER0))
471:                 # ( !REFRESH_TIMER4 & (REFRESH_TIMER3 & REFRESH_TIMER2 & REFRESH_TIMER1 & REFRESH_TIMER0) );
472:
473:[REFRESH_TIMER0..4].ck = CPU_CLK_div16;
474:[REFRESH_TIMER0..4].ar = REFRESH_TIMER_RESET # !nSYS_RESET;
475:
476:/* REFRESH_TIMER_RESET will pulse for 1 clock cycle when the timer reaches 15 */
477:
478:REFRESH_TIMER_RESET.d = (REFRESH_TIMER0 & REFRESH_TIMER1 & REFRESH_TIMER2 & REFRESH_TIMER3 & !REFRESH_TIMER4);  // 15

479:REFRESH_TIMER_RESET.ck = !CPU_CLK_div8;
480:REFRESH_TIMER_RESET.ar = !nSYS_RESET;
481:
482:/* 
483:   When the REFRESH_TIMER_RESET flip flop goes high, we need to do a REFRESH cycle.  We will toggle on a REFRESH_REQUESTED 
484:   flag to indicate the need to do a refresh. 
485:*/

