504:REFRESH_ACTIVE.d = REFRESH_REQUESTED # nCPU_AS # REFRESH_ACTIVE;
505:REFRESH_ACTIVE.ck = CPU_CLK;
506:REFRESH_ACTIVE.ar = !nSYS_RESET # REFRESH_COMPLETE;         
