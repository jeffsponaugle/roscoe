514:PINNODE [0..0] = [REFRESH_STATE_MACHINE0..2];
515:FIELD field_REFRESH_STATE_MACHINE = [REFRESH_STATE_MACHINE0..2];         // a field is used to make it simplier to refer to state machine values

516:
517:[REFRESH_STATE_MACHINE0..2].ck = !CPU_CLK;
518:[REFRESH_STATE_MACHINE0..2].ar = !REFRESH_ACTIVE # REFRESH_COMPLETE # nSYS_RESET;
519:
520:REFRESH_STATE_MACHINE0.d = !REFRESH_STATE_MACHINE0;
521:REFRESH_STATE_MACHINE1.d = (REFRESH_STATE_MACHINE1 & !REFRESH_STATE_MACHINE0)
522:                        #  (!REFRESH_STATE_MACHINE1 & REFRESH_STATE_MACHINE0);
523:REFRESH_STATE_MACHINE2.d = (REFRESH_STATE_MACHINE2 & !(REFRESH_STATE_MACHINE0 & REFRESH_STATE_MACHINE1))
524:                        #  (!REFRESH_STATE_MACHINE2 & (REFRESH_STATE_MACHINE0 & REFRESH_STATE_MACHINE1));
