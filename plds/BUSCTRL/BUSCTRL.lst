535:nREFRESH_CAS.d = !(field_REFRESH_STATE_MACHINE:['d'1,'d'2]);
536:nREFRESH_CAS.ck = CPU_CLK;
537:nREFRESH_CAS.ap = !nSYS_RESET # !REFRESH_ACTIVE;
